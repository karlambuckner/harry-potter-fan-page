<h1>New work</h1>

<% if @work.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @work.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @work do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :image_url %>
  <%= f.text_field :image_url %>
  <%= f.label :category%>
  <% options = options_from_collection_for_select(@categories, 'id', 'name') %>
  <%= f.select :category_id, options %>
  <%= f.label :user%>
  <% optionsX = options_from_collection_for_select(@users, 'id', 'username') %>
  <%= f.select :user_id, optionsX %>
  <%= f.submit  %>
<% end %>
